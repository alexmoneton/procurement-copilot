# TenderPulse Customer Acquisition Engine
# Copy this to .env and add your API keys

# REQUIRED: Email finding (get free API key from hunter.io)
HUNTER_API_KEY=your_hunter_io_api_key_here

# REQUIRED: Email sending (get free API key from resend.com)
RESEND_API_KEY=your_resend_api_key_here

# REQUIRED: Your email details
FROM_EMAIL=hello@tenderpulse.eu
FROM_NAME=Alex from TenderPulse

# OPTIONAL: Alternative email finder
APOLLO_API_KEY=your_apollo_api_key_here

# OPTIONAL: Database (uses SQLite if not set)
DATABASE_URL=postgresql://user:pass@localhost:5432/tenderpulse

# OPTIONAL: Rate limiting
MAX_EMAILS_PER_DAY=50
EMAIL_DELAY_SECONDS=2
