# TenderPulse Frontend Production Environment
# Copy to .env.local and fill in actual values

# API Configuration
NEXT_PUBLIC_BACKEND_URL=https://api.tenderpulse.eu
NEXT_PUBLIC_APP_URL=https://tenderpulse.eu

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key_here

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
NEXT_PUBLIC_STRIPE_PRICE_IDS={"starter":"price_starter_live","pro":"price_pro_live","team":"price_team_live"}

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Environment
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_APP_VERSION=1.0.0

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=
