# Environment configuration for full European integration
# Copy this to .env to enable all enhanced APIs

# Feature flags - Full enhanced integration mode
ENABLE_ENHANCED_EUROPEAN_APIS=true
ENABLE_BOAMP_INTEGRATION=true  
TED_ONLY_MODE=false

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=procurement_copilot
DB_USER=postgres
DB_PASSWORD=postgres

# Application settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-production-secret-key-here

# API settings
API_V1_PREFIX=/api/v1

# CORS settings
CORS_ORIGINS=["https://procurement-copilot-frontend.vercel.app", "https://localhost:3000"]

# Enhanced API settings
TED_API_KEY=your-ted-api-key-if-available
GERMAN_API_KEY=your-german-api-key-if-available
ITALIAN_API_KEY=your-italian-api-key-if-available
SPANISH_API_KEY=your-spanish-api-key-if-available
DUTCH_API_KEY=your-dutch-api-key-if-available

# Logging
LOG_LEVEL=INFO
