# Environment configuration for customer testing
# Copy this to .env to enable TED-only mode

# Feature flags - TED-only mode for customer testing
ENABLE_ENHANCED_EUROPEAN_APIS=false
ENABLE_BOAMP_INTEGRATION=false  
TED_ONLY_MODE=true

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=procurement_copilot
DB_USER=postgres
DB_PASSWORD=postgres

# Application settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-production-secret-key-here

# API settings
API_V1_PREFIX=/api/v1

# CORS settings
CORS_ORIGINS=["https://procurement-copilot-frontend.vercel.app", "https://localhost:3000"]

# TED API settings (if needed)
TED_API_KEY=your-ted-api-key-if-available

# Logging
LOG_LEVEL=INFO
