# TenderPulse Environment Configuration

# Feature flags for connectors
ENABLE_CONNECTORS=TED                    # Live sources (comma-separated)
SHADOW_CONNECTORS=                       # Shadow sources (e.g., "BOAMP_FR,GERMANY")
TZ=Europe/Paris

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/tenderpulse
DB_HOST=db
DB_PORT=5432
DB_NAME=tenderpulse
DB_USER=postgres
DB_PASSWORD=postgres
DB_ECHO=false

# Application
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# External services
RESEND_API_KEY=your-resend-api-key-here
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Authentication
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here

# URLs
BACKEND_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:3000

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://tenderpulse.eu", "https://*.vercel.app"]

# Logging
LOG_LEVEL=INFO

# Redis (optional)
REDIS_URL=redis://redis:6379/0

# Monitoring
GRAFANA_PASSWORD=admin
