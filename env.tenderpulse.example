# TenderPulse Environment Configuration

# Feature flags for connectors
ENABLE_CONNECTORS=TED                    # Live sources (comma-separated)
SHADOW_CONNECTORS=                       # Shadow sources (e.g., "BOAMP_FR,GERMANY")
TZ=Europe/Paris

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/tenderpulse
DB_HOST=db
DB_PORT=5432
DB_NAME=tenderpulse
DB_USER=postgres
DB_PASSWORD=postgres
DB_ECHO=false

# Application
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# External services
RESEND_API_KEY=your-resend-api-key-here
SENDGRID_API_KEY=your-sendgrid-api-key-here
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Authentication
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key-here
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key-here

# URLs
BACKEND_BASE_URL=http://localhost:8000
FRONTEND_BASE_URL=http://localhost:3000

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://tenderpulse.eu", "https://*.vercel.app"]

# Logging
LOG_LEVEL=INFO

# Redis (optional)
REDIS_URL=redis://redis:6379/0

# Monitoring
GRAFANA_PASSWORD=admin

# Outbound Pipeline Configuration
OUTBOUND_ENABLED=true
OUTBOUND_SCHEDULE_CRON=30 8 * * *  # 08:30 Europe/Paris
OUTBOUND_MAX_LEADS_PER_DAY=150
OUTBOUND_MAX_EMAILS_PER_DAY=100
OUTBOUND_MIN_SCORE=0.55  # lost-bidder/fit score threshold 0..1
OUTBOUND_SECTORS=it,consulting,construction  # optional comma list to narrow

# Email Configuration
EMAIL_FROM=alerts@mail.tenderpulse.eu
EMAIL_FROM_NAME=TenderPulse
LIST_UNSUB_BASE_URL=https://tenderpulse.eu/unsub

# Hunter.io Configuration
HUNTER_API_KEY=your-hunter-api-key-here
HUNTER_DAILY_CAP=250
SENDER_DOMAIN=mail.tenderpulse.eu  # for tracking domain if needed

# Apollo.io Configuration (optional)
APOLLO_API_KEY=your-apollo-api-key-here
APOLLO_DAILY_CAP=50
